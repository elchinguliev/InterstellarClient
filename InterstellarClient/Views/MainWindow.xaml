<Window x:Class="InterstellarClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterstellarClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock Text="{Binding MessageText}" FontWeight="UltraBlack" FontSize="17" Height="238" Width="321" TextWrapping="Wrap" HorizontalAlignment="Left" Canvas.Top="22" VerticalAlignment="Top" Canvas.Left="380">

        </TextBlock>
        <TextBox FontWeight="UltraBlack" Text="{Binding NameTextBlock}" FontSize="20" HorizontalAlignment="Left" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="199" Height="44" Canvas.Left="5" Canvas.Top="97"></TextBox>
        <Button FontSize="14" FontWeight="UltraBlack" Background="Red" Command="{Binding ConnectServerCommand}" Content="Connect Server" Height="44" Width="107" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Top" Canvas.Top="146">

        </Button>
        <Label FontWeight="UltraBlack" Content="{Binding ServerStatus}" Canvas.Left="80" Canvas.Top="46" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
    </Canvas>
</Window>
